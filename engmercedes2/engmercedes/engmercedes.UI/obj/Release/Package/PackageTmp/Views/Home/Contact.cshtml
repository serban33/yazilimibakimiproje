
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--== Start Page Header Area ==-->
<div class="page-header-wrap bg-img" data-bg="/Content/assets/img/bg/page-header-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="page-header-content">
                    <div class="page-header-content-inner">
                        <h1>@ViewBag.Title</h1>

                        <ul class="breadcrumb">
                            <li><a href="/">Anasayfa</a></li>
                            <li class="current"><a href="#">@ViewBag.Title</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--== End Page Header Area ==-->
<!--== Start Page Content Wrapper ==-->
<div class="page-content-wrapper sm-top">
    <div class="contact-page-content">
        <div class="contact-info-wrapper">
            <div class="container">
                <div class="row mtn-30">
                    <div class="col-sm-6 col-lg-4">
                        <div class="contact-info-item">
                            <div class="con-info-icon">
                                <i class="ion-ios-location-outline"></i>
                            </div>
                            <div class="con-info-txt">
                                <h4>Adresimiz</h4>
                                <p>
                                    @TempData["SiteAdres"]
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-4">
                        <div class="contact-info-item">
                            <div class="con-info-icon">
                                <i class="ion-iphone"></i>
                            </div>
                            <div class="con-info-txt">
                                <h4>Telefon Numarımız</h4>
                                <p>
                                    Cep: @TempData["Telefon1"] <br>
                                    İş: @TempData["Telefon2"]
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-4">
                        <div class="contact-info-item">
                            <div class="con-info-icon">
                                <i class="ion-ios-email-outline"></i>
                            </div>
                            <div class="con-info-txt">
                                <h4>Email Adresimiz</h4>
                                <p>
                                     
                                    @TempData["SiteMail"]
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="contact-form-wrapper sm-top">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="contact-form-content">
                            <h2>Mesaj Gönderin</h2>

                            <div class="contact-form-wrap">
                                <form action="#" method="post" id="contact-form">
                                    <div class="contact-form-inner">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="input-item">
                                                    <label class="sr-only" for="name">Adınız</label>
                                                    <input type="text" name="Name" id="name" placeholder="Adınız" required />
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="input-item">
                                                    <label class="sr-only" for="email">Email Adresiniz</label>
                                                    <input type="email" name="Email" id="email" placeholder="Email Adresiniz" required />
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="input-item">
                                                    <label class="sr-only" for="subject">Konu</label>
                                                    <input type="text" name="Subject" id="subject" placeholder="Konu Giriniz" required />
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="input-item">
                                                    <label class="sr-only" for="message">Mesajınız</label>
                                                    <textarea name="message" id="Message" cols="30" rows="8" placeholder="Mesajınızı Yazınız" required></textarea>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="input-item">
                                                    <button class="btn btn-brand">Gönder</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Form Submission Notification -->
                                    <div class="form-message"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="contact-map-wrapper sm-top">
            <div id="map_content" class="h-100" data-lat="23.7639212" data-lng="90.429871" data-zoom="7"></div>
        </div>
    </div>
</div>
<!--== End Page Content Wrapper ==-->