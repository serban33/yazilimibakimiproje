
@{
    ViewBag.Title = "Alt Kategori Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>Alt Kategori Ekle</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <form action="" method="post" enctype="multipart/form-data">
                <div class="form-group mb-4">
                    <label for="exampleFormControlInput2">Kategori </label>
                    @Html.DropDownList("KATEGORIID", (SelectList)ViewBag.Kategoriler, "Kategori Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group mb-4">
                    <label for="exampleFormControlInput2">Alt Kategori </label>
                    <input type="text" class="form-control" name="ALTKATEGORIADI" id="exampleFormControlInput2" placeholder="Alt Kategori Adı Giriniz">
                </div>
                
                <input type="submit" name="time" class="mt-4 mb-4 btn btn-primary">
            </form>
        </div>
    </div>

</div>