@model IEnumerable<engmercedes.admin.Models.UrunModel>
@{
    ViewBag.Title = "Urun Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 1;
}


<div id="tableDropdown" class="col-lg-12 col-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12  col-sm-12  col-12 ">
                    <h4>Urun Liste</h4>
               
                </div>
              
            </div>

        </div>
        <div class="widget-content widget-content-area">
            <div class="table-responsive">
          
                <table id="zero-config" class="table table-hover" style="width:100%">

                    <thead>
                    <tr>
                        <th>#</th>
                        <th>RESIM</th>
                        <th>AD</th>
                        <th>MARKA ADI</th>
                        <th>KATEGORI ADI</th>
                        <th>OEM KODU</th>
                        <th>URUN KODU</th>

                        <th>STOK DURUMU</th>


                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>

                            <td>@counter</td>
                            <td><img class="img-fluid  " width="220" height="200" src="data:image;base64,@Convert.ToBase64String(item.URUNILKRESIM)"/></td>
                            <td>@item.URUNAD</td>
                            <td>@item.MARKAADI</td>
                            <td>@item.KATEGORIAD</td>
                            <td>@item.URUNOEMKODU</td>
                            <td>@item.URUNKODU</td>


                            <td>
                                @if (item.ISAPPROVED == true)
                                {
                                    <button onclick="isapproved(@item.ID)" class="btn btn-success mb-2 btn-sm">VAR</button>
                                }
                                else
                                {
                                    <button onclick="isapproved(@item.ID)" class="btn btn-danger mb-2 btn-sm">YOK</button>
                                }
                            </td>


                            <td>
                                <a href="javascript:void(0);" onclick="Image(@item.ID)" data-toggle="tooltip" data-placement="top" title="" data-original-title="Settings"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-camera"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg></a>
                                <a href="javascript:void(0);" onclick="Detail(@item.ID)" data-toggle="tooltip" data-placement="top" title="" data-original-title="Settings"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg></a>


                                <a href="javascript:void(0);" onclick="Update(@item.ID)" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 text-success"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a>
                                <a href="javascript:void(0);" class="productdelete" onclick="Delete(@item.ID)" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2 text-danger"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg></a>

                            </td>


                        </tr>
                        counter++;
                    }
                    </tbody>
                </table>
               
            </div>



        </div>
    </div>
</div>
<div class="d-flex justify-content-between mx-5 mt-3 mb-5">

    <div class="spinner-border text-success align-self-center" style="display: none"></div>

</div>
@section scripts
{
    <script src="/Content/assets/js/scrollspyNav.js"></script>

    <script src="/Content/plugins/sweetalerts/sweetalert2.min.js"></script>
    <script src="/Content/plugins/sweetalerts/custom-sweetalert.js"></script>
    <script src="/Content/plugins/table/datatable/datatables.js"></script>
    <script>
        $('#zero-config').DataTable({
            "oLanguage": {
                "oPaginate": { "sPrevious": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>', "sNext": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>' },
                "sInfo": "Showing page _PAGE_ of _PAGES_",
                "sSearch": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>',
                "sSearchPlaceholder": "Search...",
                "sLengthMenu": "Results :  _MENU_",
            },
            "stripeClasses": [],
            "lengthMenu": [7, 10, 20, 50],
            "pageLength": 7 
        });
    </script>
    <script>

        function Delete(kategoriID) {

            $('.productdelete').on('click',
                function() {
                    swal({
                        title: 'Silmek isteğinize emin misiniz?',
                        text: "Bunu geri alamayacaksınız!",
                        type: 'warning',
                        showCancelButton: true,
                        cancelButtonText: "Vazgeç",
                        confirmButtonText: 'Sil',
                        padding: '2em'
                    }).then(function(result) {
                        if (result.value) {
                            $.ajax({
                                type: 'post',
                                url: '/urun/urun-sil/' + kategoriID,
                                success: function(data) {
                                    if (data) {
                                        if (result.value) {
                                            swal(
                                                'Silindi!',
                                                'Urun Başarıyla Silindi.',
                                                'success'
                                            );
                                            setTimeout(function() {
                                                    location.reload();
                                                },
                                                1000)

                                        }
                                    } else {
                                        swal('Hata Oluştu!', 'İşlem sırasında hata oluştu?', 'warning');
                                        return false;
                                    }
                                }
                            });
                        }

                    });
                })
        }

        function Update(kategoriID) {
            setTimeout(function() {
                    window.location.assign("/urun/urun-guncelle/" + kategoriID);
                    //3 saniye sonra yönlenecek
                },
                1000);
        }
        function Detail(kategoriID) {
            setTimeout(function() {
                    window.location.assign("/urun/urun-detay/" + kategoriID);
                    //3 saniye sonra yönlenecek
                },
                1000);
        }

        function Image(id) {
            setTimeout(function () {
                    window.location.assign("/resim/resim-liste/" + id);
                    //3 saniye sonra yönlenecek
                },
                1000);
        }

    </script>
    <script>
        function isapproved(id) {
            console.log(id)

            $.ajax({
                url: '/Product/CorrectActive/' + id,
                type: "POST",
                dataType: "json",
                data: { id: id },
                success: function (data) {
                    if (data === true) {
                        Swal.fire({
                            title: 'Lütfen Bekleyin',
                            html: 'Stok Durumu Güncelleniyor!',
                            timer: 2000,
                            timerProgressBar: true,
                            onBeforeOpen: () => {
                                Swal.showLoading();
                                timerInterval = setInterval(() => {
                                    var content = Swal.getContent();
                                    if (content) {
                                        var b = content.querySelector('b');
                                        if (b) {
                                            b.textContent = Swal.getTimerLeft();
                                        }
                                    }
                                },
                                    100);
                            },
                            onClose: () => {
                                clearInterval(timerInterval);
                            }
                        }).then((result) => {
                            console.log(result)
                            /* Read more about handling dismissals below */
                            if (result.dismiss === Swal.DismissReason.timer ) {
                                const toast = swal.mixin({
                                    toast: true,
                                    position: 'top-end',
                                    showConfirmButton: false,
                                    timer: 3000,
                                    padding: '2em'
                                });

                                toast({
                                    type: 'success',
                                    title: 'Stok Durumu Başarıyla Güncellendi',
                                    padding: '2em',
                                })
                                setTimeout(function () {
                                    location.reload();
                                },
                                    1500);
                            }  
                        });
                    }
                }
            });
        }
    </script>
}
